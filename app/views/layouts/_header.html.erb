<header>
  <div class="left">
    <%= link_to 'Home', root_path, class: 'home-btn' %>
  </div>
  <div class="right">
    <%= link_to 'New Event', new_event_path, class: 'new-event-btn' %>
    
    <% if user_signed_in? %>
      <%= link_to 'Your Profile', current_user, class: 'profile-btn' %>
      <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: 'logout-btn' %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: 'login-btn' %>
      <%= link_to "Sign up", new_user_registration_path, class: 'signup-btn' %>
    <% end %>
    
  </div>
</header>